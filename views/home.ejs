    <script>
      document.addEventListener('DOMContentLoaded', function() {
          const heroSwiper = new Swiper('.heroSwiper', {
              loop: true,
              autoplay: {
                  delay: 5000,
                  disableOnInteraction: false,
              },
              speed: 1000,
              effect: 'creative',
              creativeEffect: {
                  prev: {
                      // Content slides in from left
                      translate: ['-100%', 0, 0],
                      opacity: 0,
                  },
                  next: {
                      // Content slides in from right
                      translate: ['100%', 0, 0],
                      opacity: 0,
                  },
              },
              pagination: {
                  el: '.swiper-pagination',
                  clickable: true,
              },
              navigation: {
                  nextEl: '.swiper-button-next',
                  prevEl: '.swiper-button-prev',
              },
              on: {
                  slideChange: function() {
                      // Add animation classes to content when slide changes
                      const activeSlide = this.slides[this.activeIndex];
                      const textContent = activeSlide.querySelector('.lg\\:w-1\\/2.lg\\:pl-8');
                      const productImage = activeSlide.querySelector('.lg\\:w-1\\/2.lg\\:pr-8');
                      
                      // Reset animations
                      textContent.classList.remove('translate-x-[-100px]', 'opacity-0');
                      productImage.classList.remove('translate-x-[100px]', 'opacity-0');
                      
                      // Trigger reflow
                      void textContent.offsetWidth;
                      void productImage.offsetWidth;
                      
                      // Add animation classes
                      textContent.classList.add('translate-x-[-100px]', 'opacity-0');
                      productImage.classList.add('translate-x-[100px]', 'opacity-0');
                      
                      // Animate in
                      setTimeout(() => {
                          textContent.classList.remove('translate-x-[-100px]', 'opacity-0');
                          productImage.classList.remove('translate-x-[100px]', 'opacity-0');
                      }, 50);
                  },
              },
          });
          
          // Initialize first slide animation
          const firstSlide = document.querySelector('.swiper-slide-active');
          const firstText = firstSlide.querySelector('.lg\\:w-1\\/2.lg\\:pl-8');
          const firstImage = firstSlide.querySelector('.lg\\:w-1\\/2.lg\\:pr-8');
          
          firstText.classList.add('translate-x-[-100px]', 'opacity-0');
          firstImage.classList.add('translate-x-[100px]', 'opacity-0');
          
          setTimeout(() => {
              firstText.classList.remove('translate-x-[-100px]', 'opacity-0');
              firstImage.classList.remove('translate-x-[100px]', 'opacity-0');
          }, 50);
      });
    </script>