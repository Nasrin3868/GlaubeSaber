    <script>
        function toggleDetails(package) {
            const element = document.getElementById(`${package}-details`);
            const allDetails = document.querySelectorAll('.feature-table');
            
            // Close all other open details
            allDetails.forEach(detail => {
                if (detail.id !== `${package}-details`) {
                    detail.classList.add('max-h-0');
                    detail.classList.remove('max-h-[2000px]', 'py-4');
                }
            });
            
            // Toggle current package details
            if (element.classList.contains('max-h-0')) {
                element.classList.remove('max-h-0');
                element.classList.add('max-h-[2000px]', 'py-4');
            } else {
                element.classList.add('max-h-0');
                element.classList.remove('max-h-[2000px]', 'py-4');
            }
        }
